<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/roootScrill"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/round_border_gray_gradient" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/background_obese"
			android:orientation="vertical"
			android:padding="10dp" > 

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:typeface="serif"
				android:textStyle="italic"
				android:text="@string/stay_wise"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/caldroid_white"
				android:textSize="20sp" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llWhatDoYouNeed"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/background_round_transparent_real"
			android:orientation="horizontal" >

			<com.progym.custom.roundimageview.RoundedImageView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:layout_weight="1"
				android:padding="10dip"
				android:scaleType="center"
				android:src="@drawable/lightning"
				app:border_color="@color/caldroid_black"
				app:border_width="4dip"
				app:corner_radius="30dip"
				app:oval="false" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="@string/what_do_you_need"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/caldroid_white" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llUsefulTable"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/background_round_transparent_real"
			android:orientation="horizontal" >

			<com.progym.custom.roundimageview.RoundedImageView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:layout_weight="1"
				android:padding="10dip"
				android:scaleType="center"
				android:src="@drawable/energy_table"
				app:border_color="@color/caldroid_black"
				app:border_width="4dip"
				app:corner_radius="30dip"
				app:oval="false" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="@string/energy_table"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/caldroid_white" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llCalculateBMI"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/background_round_transparent_real"
			android:orientation="horizontal" >

			<com.progym.custom.roundimageview.RoundedImageView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:layout_weight="1"
				android:padding="10dip"
				android:scaleType="center"
				android:src="@drawable/speedometr"
				app:border_color="@color/caldroid_black"
				app:border_width="4dip"
				app:corner_radius="30dip"
				app:oval="false" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="@string/calculate_bmi"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/caldroid_white" />
		</LinearLayout>
		
		
		
		<LinearLayout
			android:id="@+id/llCalculateMyBMI"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/background_round_transparent_real"
			android:orientation="horizontal" >

			<com.progym.custom.roundimageview.RoundedImageView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:layout_weight="1"
				android:padding="10dip"
				android:scaleType="center"
				android:src="@drawable/user"
				app:border_color="@color/caldroid_black"
				app:border_width="4dip"
				app:corner_radius="30dip"
				app:oval="false" />
 
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="@string/calculate_my_bmi"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/caldroid_white" />
		</LinearLayout>
		
		
	</LinearLayout>

</ScrollView>