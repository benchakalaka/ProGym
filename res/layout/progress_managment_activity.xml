<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/water_managment_root_relative_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_alignParentBottom="true"
		android:layout_alignParentTop="true"
		android:baselineAligned="false"
		android:orientation="horizontal"
		android:padding="1dp" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="3dp"
			android:layout_weight="1"
			android:background="@drawable/background_round_border"
			android:orientation="vertical" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:layout_margin="10dp"
				android:background="@drawable/background_round_border_green_"
				android:orientation="horizontal" >

				<ImageView
					android:id="@+id/ivPrevDay"
					android:layout_width="50dp"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_alignParentTop="true"
					android:background="@drawable/left" />

				<ImageView
					android:id="@+id/ivNextDay"
					android:layout_width="50dp"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentTop="true"
					android:background="@drawable/right" />

				<LinearLayout
					android:id="@+id/llLeftPanelDateWithCalendar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_alignParentTop="true"
					android:layout_centerHorizontal="true"
					android:background="@drawable/background_round_border"
					android:gravity="center"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/twCurrentDate"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="2020-20-20"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:textColor="@android:color/white" />

					<ImageView
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:background="@drawable/calendar" />
				</LinearLayout>
			</RelativeLayout>

			<!-- BAR CHART -->

			<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_margin="10dp"
				android:background="@drawable/background_round_border_green_"
				android:orientation="horizontal" >

				<com.echo.holographlibrary.BarGraph
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:id="@+id/bargraph"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/default_margin"
					app:barAxisColor="@color/transparent_blue"
					app:barShowAxis="true"
					app:barShowText="true" />
			</RelativeLayout>

			<!-- PIE CHART -->

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:orientation="vertical" >

				<com.echo.holographlibrary.PieGraph
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:id="@+id/piegraph"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_margin="@dimen/default_margin"
					android:layout_weight="1"
					app:pieInnerCircleRatio="128"
					app:pieSlicePadding="0dip" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<com.echo.holographlibrary.LineGraph
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:id="@+id/linegraph"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/default_margin"
					app:lineAxisColor="@color/transparent_blue"
					app:lineStrokeColor="@color/transparent_orange"
					app:lineStrokeSpacing="10dip"
					app:lineStrokeWidth="1dip"
					app:lineUseDip="true" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>