<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roootScrill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_border_gray_gradient" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        
          
        <com.progym.custom.roundimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/roundImageFoodCalloriesProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="20dip"
            android:paddingLeft="20dip"
            android:paddingRight="40dip"
            android:paddingTop="20dip"
            android:scaleType="center"
            android:src="@drawable/calendar"
            app:border_color="@color/caldroid_black"
            app:border_width="3dip"
            app:corner_radius="30dip"
            app:oval="false" />
        
        <com.progym.custom.roundimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/roundImageWaterProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="20dip"
            android:paddingLeft="20dip"
            android:paddingRight="40dip"
            android:paddingTop="20dip"
            android:scaleType="center"
            android:src="@drawable/water_progress"
            app:border_color="@color/caldroid_black"
            app:border_width="3dip"
            app:corner_radius="30dip"
            app:oval="false" />

        <com.progym.custom.roundimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/roundImageFoodProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="20dip"
            android:paddingLeft="40dip"
            android:paddingRight="20dip"
            android:paddingTop="20dip"
            android:scaleType="center"
            android:src="@drawable/food_progress"
            app:border_color="@color/caldroid_black"
            app:border_width="3dip"
            app:corner_radius="30dip"
            app:oval="false" />
    </LinearLayout>

</ScrollView>