<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rlRootDailyBar"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp" >

	<com.echo.holographlibrary.PieGraph
		xmlns:app="http://schemas.android.com/apk/res/com.progym"
		xmlns:android1="http://schemas.android.com/apk/res/android"
		android1:id="@+id/pieGraphFoodStats"
		android1:layout_width="match_parent"
		android1:layout_height="match_parent"
		app:pieInnerCircleRatio="120" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@color/green" />

			<TextView
				android:id="@+id/twProtein"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="12"
				android:textAppearance="?android:attr/textAppearanceLarge" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@color/orange" />

			<TextView
				android:id="@+id/twFat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="77.3"
				android:textAppearance="?android:attr/textAppearanceLarge" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@color/purple" />

			<TextView
				android:id="@+id/twCarbs"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="77.3"
				android:textAppearance="?android:attr/textAppearanceLarge" />
		</LinearLayout>
	</LinearLayout>

	<ImageView
		android:id="@+id/ivPrevYear"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:src="@drawable/left" />

	<ImageView
		android:id="@+id/ivNextYear"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/right" />

	<TextView
		android:id="@+id/twCurrentDay"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:background="@color/caldroid_yellow"
		android:text="sss"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
		android:id="@+id/twCalories"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:textColor="@color/caldroid_white"
		android:background="@drawable/blue_gradient"
		android:text="2032"
		android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>