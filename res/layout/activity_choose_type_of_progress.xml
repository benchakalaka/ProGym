<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/roootScrill"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/round_border_gray_gradient" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		
		
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/background_round_border"
			android:orientation="vertical" >


			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:textColor="@color/caldroid_white"
				android:text="Track your statistic"
				android:textSize="20sp"
				android:textAppearance="?android:attr/textAppearanceLarge" />
		</LinearLayout>
		
		
		
		
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<com.progym.custom.roundimageview.RoundedImageView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/roundImageFoodCalloriesProgress"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:padding="10dip"
				android:scaleType="center"
				android:src="@drawable/calories_statistics"
				app:border_color="@color/caldroid_black"
				app:border_width="4dip"
				app:corner_radius="30dip"
				app:oval="false" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:textColor="@color/caldroid_white"
				android:text="Callories statistic"
				android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<com.progym.custom.roundimageview.RoundedImageView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/roundImageWaterProgress"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:padding="10dip"
				android:scaleType="center"
				android:src="@drawable/water_statistics"
				app:border_color="@color/caldroid_black"
				app:border_width="4dip"
				app:corner_radius="30dip"
				app:oval="false" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:textColor="@color/caldroid_white"
				android:text="Water statistic"
				android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<com.progym.custom.roundimageview.RoundedImageView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/roundImageFoodProgress"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:padding="10dip"
				android:scaleType="center"
				android:src="@drawable/protein_carbs_fat_statistics"
				app:border_color="@color/caldroid_black"
				app:border_width="4dip"
				app:corner_radius="40dip"
				app:oval="false" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:textColor="@color/caldroid_white"
				android:text="Protein/Carbohydrates/Fat statistic"
				android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
	</LinearLayout>

</ScrollView>