<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

	<item android:id="@android:id/background">
		<shape android:shape="rectangle" >
			<corners android:radius="5dp" />

			<gradient
				android:angle="0"
				android:endColor="@color/caldroid_holo_blue_light"
				android:startColor="@color/caldroid_white" />
		</shape>
	</item>
	<item android:id="@android:id/secondaryProgress">
		<clip>
			<shape android:shape="rectangle" >
				<corners android:radius="5dp" />

				<gradient
					android:angle="270"
					android:endColor="@color/caldroid_white"
					android:startColor="@color/caldroid_black" />
			</shape>
		</clip>
	</item>
	<item android:id="@android:id/progress">
		<clip>
			<shape android:shape="rectangle" >
				<corners android:radius="5dp" />

				<gradient
					android:angle="270"
					android:endColor="@color/caldroid_white"
					android:startColor="@color/caldroid_black" />
			</shape>
		</clip>
	</item>

</layer-list>